<div class="flex flex-col items-center justify-center min-h-screen">
  <% if current_user %>
    <%= image_tag current_user.image, class: "w-20 h-20 rounded-full mb-4" %>
    <h1 class="text-3xl font-bold mb-2">
      <%= current_user.name %>さん
    </h1>
    <%= link_to "ログアウト", log_out_path, class: "text-red-500 font-medium hover:underline" %>
  <% else  %>
    <%= button_to "Googleでログイン", "/auth/google_oauth2", method: :post, data: { turbo: false }, class: "px-6 py-3 bg-blue-500 text-white rounded-full shadow-md font-medium hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  <% end %>
</div>
