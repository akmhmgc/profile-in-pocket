<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto bg-white shadow-lg rounded-lg p-6">
    <h1 class="text-3xl font-bold mb-4">
      プロフィール新規作成
    </h1>
    <%= form_with model: @profile do |form| %>
      <div class="mb-4">
        <%= form.label :name, '名前', class: "block text-gray-600 text-sm font-bold mb-2" %>
        <%= form.text_field :name, class: "w-full rounded border px-3 py-2 text-gray-700 focus:outline-none focus:border-indigo-500", required: true %>
      </div>
      <div class="mb-4">
        <%= form.label :description, 'プロフィール文', class: "block text-gray-600 text-sm font-bold mb-2" %>
        <%= form.text_area :description, class: "w-full rounded border px-3 py-2 text-gray-700 focus:outline-none focus:border-indigo-500", required: true %>
      </div>
      <div class="mb-4">
        <%= form.label :twitter_id, 'Xアカウント名', class: "block text-gray-600 text-sm font-bold mb-2" %>
        <%= form.text_field :twitter_id, class: "w-full rounded border px-3 py-2 text-gray-700 focus:outline-none focus:border-indigo-500" %>
      </div>
      <div class="mb-4">
        <%= form.label :github_url, 'Githubアカウント名', class: "block text-gray-600 text-sm font-bold mb-2" %>
        <%= form.text_field :github_id, class: "w-full rounded border px-3 py-2 text-gray-700 focus:outline-none focus:border-indigo-500" %>
      </div>
      <div class="mb-4">
        <%= form.label :qiita_id, 'Qiitaアカウント名', class: "block text-gray-600 text-sm font-bold mb-2" %>
        <%= form.text_field :qiita_id, class: "w-full rounded border px-3 py-2 text-gray-700 focus:outline-none focus:border-indigo-500" %>
      </div>
      <div class="mb-4">
        <%= form.label :zenn_id, 'Zenn ID', class: "block text-gray-600 text-sm font-bold mb-2" %>
        <%= form.text_field :zenn_id, class: "w-full rounded border px-3 py-2 text-gray-700 focus:outline-none focus:border-indigo-500" %>
      </div>
      <div class="flex justify-end">
        <%= form.submit "Save", class: "bg-indigo-500 text-white px-4 py-2 rounded hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600" %>
      </div>
    <% end %>
  </div>
</div>
